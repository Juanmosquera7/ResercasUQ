<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.reservasuq.controladores.CancelarReservaControlador" prefWidth="400.0" prefHeight="300.0">
    <children>
        <Label text="Cancelar Reserva" style="-fx-font-size: 24px; -fx-font-weight: bold;" layoutX="20.0" layoutY="20.0"/>

        <Label text="Seleccione una Reserva:" layoutX="20.0" layoutY="80.0"/>
        <ComboBox fx:id="comboReservas" layoutX="20.0" layoutY="100.0" prefWidth="360.0"/>

        <Button text="Cancelar Reserva" layoutX="20.0" layoutY="150.0" prefWidth="360.0" onAction="#cancelarReserva" style="-fx-background-color: red; -fx-text-fill: white;"/>

        <Button text="Regresar" layoutX="20.0" layoutY="200.0" prefWidth="360.0" onAction="#regresar" style="-fx-background-color: gray; -fx-text-fill: white;"/>
    </children>
</AnchorPane>
